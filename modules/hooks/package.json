{
  "name": "@react-firebase/hooks",
  "version": "0.1.2",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "npm run test:i",
    "build": "rm -rf ./dist/ && rollup -c",
    "test:i": "jest --watch --coverage",
    "test": "tsc",
    "prepublish": "npm run test && npm run build",
    "commit": "git-cz",
    "setup:semantic-release": "npx semantic-release-cli setup"
  },
  "husky": {
    "pre-commit": "prettier src/* --write",
    "pre-push": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rakannimer/hooks"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.3",
    "@types/lodash": "^4.14.117",
    "comment-json": "^1.1.3",
    "git-cz": "^1.7.1",
    "husky": "^1.1.1",
    "jest": "^23.6.0",
    "parcel-bundler": "^1.10.1",
    "prettier": "^1.14.3",
    "react": "16.7.0-alpha.0",
    "rollup": "^0.66.4",
    "rollup-plugin-typescript2": "^0.17.1",
    "semantic-release": "^17.2.3",
    "ts-jest": "^23.10.3",
    "typescript": "^3.1.1"
  },
  "peerDependencies": {
    "react": ">=16.7"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/*.{ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/dist/"
    ]
  },
  "files": [
    "dist/"
  ],
  "description": "React Custom Hooks for interacting with Firebase",
  "dependencies": {
    "get-firebase-ref": "^1.1.1",
    "initialize-firebase-app": "^1.0.0",
    "lodash": ">=4"
  }
}
